{
  "include": ["src/**/*.ts", "types/**/*.d.ts", "test/**/*.ts"],
  "compilerOptions": {
    "target": "es2016",
    "moduleDetection": "auto",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "noResolve": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints": ["src/*.ts", "test/*.ts", "types/*.d.ts"],
    "includes": ["types"],
    "out": "docs",
    "readme": "none",
    "includeVersion": true,
    "disableSources": false
  }
}
